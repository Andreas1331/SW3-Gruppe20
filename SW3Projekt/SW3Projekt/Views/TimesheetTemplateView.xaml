<UserControl x:Class="SW3Projekt.Views.TimesheetTemplateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW3Projekt.Views"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="500">

    <Grid Name="PanelList">
        <StackPanel x:Name="TimesheetEntryTemplate" CanVerticallyScroll="True">
            <TextBlock Text="Ny Timeseddel"  HorizontalAlignment="Center" FontSize="25" />
            <Grid Margin="0, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBox x:Name="WeekBox"  Grid.Column="0" HorizontalAlignment="Center" Width="100" Text="" TabIndex="1" Panel.ZIndex="1"  TextChanged="WeekBox_TextChanged"/>
                <TextBox x:Name="YearBox" Grid.Column="1" HorizontalAlignment="Center" Width="100" Text="" TabIndex="2" Panel.ZIndex="1" TextChanged="YearBox_TextChanged"/>
                <TextBox x:Name="SalaryIDBox"  Grid.Column="2" HorizontalAlignment="Center" Width="100" Text="" TabIndex="3" Panel.ZIndex="1" TextChanged="SalaryIDBox_TextChanged"/>
                <Label x:Name="WeekLabel" Foreground="LightGray" Visibility="Visible" Content="Uge nr." Grid.Column="0" HorizontalAlignment="Center" Panel.ZIndex="9"/>
                <Label x:Name="YearLabel" Foreground="LightGray" Visibility="Visible" Content="Årstal" Grid.Column="1" HorizontalAlignment="Center" Panel.ZIndex="9"/>
                <Label x:Name="SalaryLabel" Foreground="LightGray" Visibility="Visible" Content="Løn nr." Grid.Column="2" HorizontalAlignment="Center" Panel.ZIndex="9"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <TextBlock Text="Mandag" ></TextBlock>
                <Button Content="Tilføj"  Margin="10,0,0,0" Click="AddTimeSheetEntryMonday_button_click"/>
            </StackPanel>
            <ScrollViewer MaxHeight="200"  HorizontalAlignment="Left" HorizontalScrollBarVisibility="Auto">
                <StackPanel x:Name="MondayEntries">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80" ></ColumnDefinition>
                            <ColumnDefinition Width="70" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="45" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="80" ></ColumnDefinition>
                            <ColumnDefinition Width="40" ></ColumnDefinition>
                            <ColumnDefinition Width="50" ></ColumnDefinition>
                            <ColumnDefinition Width="80" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="80" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="80" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                            <ColumnDefinition Width="60" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Type"  Grid.Column="0" Grid.Row="0" />
                        <TextBlock Text="Projekt ID"   Grid.Column="1" Grid.Row="0" />
                        <TextBlock Text="Starttid"  Grid.Column="2" Grid.Row="0" />
                        <TextBlock Text="Sluttid" Grid.Column="3" Grid.Row="0" />
                        <TextBlock Text="Timer"  Grid.Column="4" Grid.Row="0" />
                        <TextBlock Text="Pause"   Grid.Column="5" Grid.Row="0" />
                        <TextBlock Text="Kørsel"  Grid.Column="6" Grid.Row="0" />
                        <TextBlock Text="km"   Grid.Column="7" Grid.Row="0" />
                        <TextBlock Text="Diæt"   Grid.Column="8" Grid.Row="0" />
                        <TextBlock Text="Forskudttid"   Grid.Column="9" Grid.Row="0" />
                        <TextBlock Text="Værdi"   Grid.Column="10" Grid.Row="0" />
                        <TextBlock Text="Andre tillæg"  Grid.Column="11" Grid.Row="0" />
                        <TextBlock Text="Værdi"   Grid.Column="12" Grid.Row="0" />
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" ></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <StackPanel x:Name="MondayGrid"></StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                <TextBlock Text="Tirsdag" ></TextBlock>
                <Button Content="Tilføj" Margin="10,0,0,0" Click="AddTimeSheetEntryTuesday_button_click"/>
            </StackPanel>
            
            <Button Content="Gem tidsplan" Height="40"></Button>
        </StackPanel>
    </Grid>

</UserControl>
