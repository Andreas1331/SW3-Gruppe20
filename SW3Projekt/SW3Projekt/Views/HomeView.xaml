        <!--<Grid>
            <Rectangle Grid.Column="0" Grid.Column="0" Margin="0,5" Fill="{DynamicResource BackgroundWhiteBrush}" IsHitTestVisible="False">
                <Rectangle.Effect>
                    <DropShadowEffect BlurRadius="7" Direction="315" RenderingBias="Quality" ShadowDepth="2" Color="#000" Opacity="0.8"/>
                </Rectangle.Effect>
            </Rectangle>
        </Grid>-->
        <!--MARGIN BETWEEN CARDS/BOXES WHATEVER IS 5.-->

    </Grid>
</UserControl>
