<UserControl x:Class="SW3Projekt.Views.AddAgreementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW3Projekt.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#fff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!--HEADER-->
        <TextBlock Text="Tilføj Overenskomst" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" FontSize="40"></TextBlock>

        <!--ADD NAME-->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <TextBlock Text="Navn: " Width="70" FontSize="22"></TextBlock>
            <TextBox x:Name="Name" Width="295" Margin="5,0,0,0"></TextBox>
        </StackPanel>
        
        <!--ADD START TIME-->
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="Start: " Width="70" FontSize="22"></TextBlock>
                <TextBox x:Name="StartTime" Width="100" Margin="5,0,0,0"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="End: " Width="70" FontSize="22"></TextBlock>
                <TextBox x:Name="EndTime" Width="100" Margin="5,0,0,0"></TextBox>
            </StackPanel>

            <ToggleButton x:Name="IsActive" Content="Aktiv:" Grid.Row="0" Grid.Column="2" Width="60" Height="20" HorizontalAlignment="Left"></ToggleButton>
        </Grid>

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
            <TextBlock x:Name="TextBlockAddRates" Text="Rater i overnskomst:" FontSize="22" VerticalAlignment="Center"></TextBlock>
            <Button x:Name="BtnAddRatesToCA" Content="Tilføj Rate+" Margin="10,0,0,0" VerticalAlignment="center"></Button>
        </StackPanel>
        
        
    </Grid>
</UserControl>
