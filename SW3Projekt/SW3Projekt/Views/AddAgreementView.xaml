<UserControl x:Class="SW3Projekt.Views.AddAgreementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW3Projekt.Views"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             Background="{DynamicResource BackgroundGreyBrush}"
             >

    <!--Height="{Binding Path=ActualHeight}" 
             Width="{Binding Path=ActualWidth}"-->

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!--GO BACK-->
        <Button x:Name="BtnBackToCaOverview" Grid.Column="0" Width="40" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Background="Transparent" BorderThickness="0">
            <Image Source="/Assets/Icons/BackArrow.png" ></Image>
        </Button>
        
        <!--ADD INFORMATION-->
        <Grid Grid.Row="0" Grid.Column="1" Style="{DynamicResource VerticalAlignGrids}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource VerticalAlignTextblocks}"></Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource VerticalAlignTextboxes}"></Style>
                <Style TargetType="CheckBox" BasedOn="{StaticResource VerticalAlignCheckboxes}"></Style>
                <Style TargetType="DatePicker" BasedOn="{StaticResource VerticalAlignDatePicker}"></Style>
            </Grid.Resources>

            <StackPanel Orientation="Horizontal" Grid.Column="0" Style="{DynamicResource VerticalAlignStackPanels}">
                <TextBlock Text="Navn: " FontSize="22" Margin="5,0,0,0" Style="{DynamicResource HeaderTextBlocksStyle}"></TextBlock>
                <TextBox x:Name="ColAgreement_Name" Width="295" FontSize="20" Margin="5,0,0,0" Style="{StaticResource HeaderTextBox}"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Style="{DynamicResource VerticalAlignStackPanels}">
                <TextBlock Text="Startdato: " FontSize="22" Style="{DynamicResource HeaderTextBlocksStyle}"></TextBlock>
                <DatePicker x:Name="ColAgreement_Start" VerticalContentAlignment="Center" Style="{StaticResource HeaderDatePicker}"></DatePicker>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="2" HorizontalAlignment="Right" Style="{DynamicResource VerticalAlignStackPanels}">
                <TextBlock Text="Slutdato: " FontSize="22" Style="{DynamicResource HeaderTextBlocksStyle}"></TextBlock>
                <DatePicker x:Name="ColAgreement_End" VerticalContentAlignment="Center" Style="{StaticResource HeaderDatePicker}" ></DatePicker>
            </StackPanel>
            
        </Grid>
        
        <!--ADD MORE INFORMATION-->

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Vertical" >
                <StackPanel.Resources>
                    <Style TargetType="TextBlock" BasedOn="{StaticResource VerticalAlignTextblocks}"></Style>
                    <Style TargetType="TextBox" BasedOn="{StaticResource VerticalAlignTextboxes}"></Style>
                    <Style TargetType="CheckBox" BasedOn="{StaticResource VerticalAlignCheckboxes}"></Style>
                </StackPanel.Resources>
                
                <Grid Visibility="{Binding visibilityState}" MaxHeight="{Binding PreDefinedRateGridMaxHeight}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--CHILD ILLNESS-->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Barn syg" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>
                        
                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="ChildIllnessRate_VismaID" MinWidth="40"></TextBox>
                            
                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="ChildIllnessRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="ChildIllnessRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>
                            
                        </StackPanel>
                    </Grid>


                    <!--DISPLACED TIMES-->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Forskudttid" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="DisplacedTimeRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="DisplacedTimeRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="DisplacedTimeRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>


                    <!--PAIDLEAVE-->
                    <Grid Grid.Row="0" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Afspadsering" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="PaidLeaveRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="PaidLeaveRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="PaidLeaveRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--HOLIDAY-->
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Ferie" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="HolidayRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="HolidayRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="HolidayRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--HOLIDAY FREE-->
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Feriefri" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="HolidayFreeRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="HolidayFreeRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="HolidayFreeRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--SH DAYS-->
                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="SH-dage" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="ShDayRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="ShDayRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="ShDayRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--Illness-->
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Sygdom" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="IllnessRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="IllnessRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="IllnessRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--DIET--> 
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Diæt" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="DietRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="DietRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="DietRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>

                    
                    <!--LOGI--> 
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--HEADER-->
                        <TextBlock Text="Logi" Grid.Row="0" Style="{DynamicResource HeaderPreDefRate}" ></TextBlock>

                        <!--CONTENT-->
                        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{DynamicResource ContentPreDefRate}">
                            <TextBlock Text="Visma ID: " Margin="5,0,0,0"></TextBlock>
                            <TextBox x:Name="LogiRate_VismaID" MinWidth="40"></TextBox>

                            <TextBlock Text="Sats: "></TextBlock>
                            <TextBox x:Name="LogiRate_RateValue" MinWidth="40"></TextBox>

                            <CheckBox x:Name="LogiRate_SaveAsMoney" Content=" Gemmes som penge"></CheckBox>

                        </StackPanel>
                    </Grid>



                </Grid>
                
                <TextBlock Text="Tillægsrater: " Style="{DynamicResource HeaderTextBlocksStyle}" Margin="5,5,0,5"></TextBlock>
                <ItemsControl ItemsSource="{Binding RateEntries}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" ></StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ContentControl  cal:View.Model="{Binding}" ></ContentControl>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="BtnAddRatesToCA" Width="120" Background="#a4a4a4" BorderThickness="0" Content="Tilføj Rate+" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Style="{StaticResource HeaderButtons}"></Button>
        <Button x:Name="BtnSaveCA" Width="200" Grid.Row="3" Grid.Column="1" BorderThickness="0" Background="#00c853" Content="Gem overenskomst" Style="{StaticResource HeaderButtons}"></Button>
        
    </Grid>
</UserControl>
