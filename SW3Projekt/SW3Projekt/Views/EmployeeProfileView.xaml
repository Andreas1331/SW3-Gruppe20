<UserControl x:Class="SW3Projekt.Views.EmployeeProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW3Projekt.Views"
             mc:Ignorable="d" Background="Snow"
             d:DesignHeight="1800" d:DesignWidth="1720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <!-- Page title -->
        <TextBlock Text="{Binding Path=SelectedEmployee}" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"></TextBlock>

        <GroupBox Header="Personlig information" Padding="15" BorderBrush="DarkGray" HorizontalAlignment="Center" Grid.Column="1"
                  Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="BtnEditEmployee" Content="Rediger" Grid.Column="1" Width="50" HorizontalAlignment="Right"></Button>
                <!--<Image Source="/GUI Elements/Images/blyant.jpg" Grid.Column="1" Height="50" Width="50"  Style="{StaticResource ShellIconStyling}" ></Image>-->

                <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" Margin="0,0,95,0">
                    <Label Content="Fornavn" MinWidth="150"></Label>
                    <TextBox x:Name="SelectedEmployee_Firstname" Margin="0,0,0,10" IsEnabled="{Binding CanEditEmployee}"></TextBox>
                    <Label Content="Efternavn"></Label>
                    <TextBox x:Name="SelectedEmployee_Surname" Margin="0,0,0,10" IsEnabled="{Binding CanEditEmployee}"></TextBox>
                    <Label Content="Telefon nr."></Label>
                    <TextBox x:Name="SelectedEmployee_PhoneNumber" IsEnabled="{Binding CanEditEmployee}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
                    <Label Content="Løn nr." MinWidth="150"></Label>
                    <TextBox x:Name="SelectedEmployee_Id" Margin="0,0,0,10" IsEnabled="False"></TextBox>
                    <Label Content="Ansættelsesdato"></Label>
                    <DatePicker x:Name="SelectedEmployee_DateHired" 
                                IsEnabled="{Binding CanEditEmployee}" Margin="0,0,0,10"></DatePicker>
                    <Label Content="Email"></Label>
                    <TextBox x:Name="SelectedEmployee_Email" IsEnabled="{Binding CanEditEmployee}"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
                    <Button x:Name="BtnSaveEmployeeChanges" Content="Gem ændringer" Margin="0,25,50,0" Width="100"></Button>
                    <Button x:Name="BtnDeleteEmployee" Content="Slet ansat" Margin="0,25,0,0" Width="100" ></Button>
                </StackPanel>
            </Grid>
        </GroupBox>

        <DataGrid x:Name="RouteCollection" Grid.Column="2" Grid.Row="2" AlternatingRowBackground="LightGray"
                  AutoGenerateColumns="False" Margin="50,0,0,0" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                  ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="auto" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Arbejdsplads" Binding="{Binding Path=LinkedWorkplace}" Width="150"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding Path=Distance}" Width="150"/>
                <DataGridTextColumn Header="Sats (dkk)" Binding="{Binding Path=RateValue}" Width="150"/>
                <DataGridTextColumn Header="Max Beløb (dkk)" Binding="{Binding Path=WorkplaceMaxPayout}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add new route area -->
        <StackPanel Orientation="Vertical" Grid.Column="2" Grid.Row="3">
            <TextBlock Text="Tilføj rute" FontSize="32" VerticalAlignment="Center"
                   HorizontalAlignment="center" Margin="0,0,0,30"></TextBlock>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <GroupBox Header="Udfyld information" Padding="15" BorderBrush="DarkGray" HorizontalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Vertical" Grid.Column="0" Margin="0,0,95,0">
                            <Label Content="Arbejdsplads" MinWidth="150"></Label>
                            <ComboBox Grid.Column="1" Grid.Row="3" x:Name="Workplaces"
                                  SelectedItem="{Binding Path=SelectedWorkplace, Mode=OneWayToSource}"
                                  DisplayMemberPath="Name">
                            </ComboBox>
                            <Label Content="Sats (dkk)"></Label>
                            <TextBox x:Name="NewRoute_RateValue" Margin="0,0,0,10"></TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Grid.Column="1">
                            <Label Content="Distance (km)" MinWidth="150"></Label>
                            <TextBox x:Name="NewRoute_Distance" Margin="0,0,0,10"></TextBox>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
                            <Button x:Name="BtnAddNewRoute" Content="Godkend" Width="100"></Button>
                        </StackPanel>
                    </Grid>
                </GroupBox>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
