<UserControl x:Class="SW3Projekt.Views.AgreementEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SW3Projekt.Sider"
             mc:Ignorable="d" 
             Width="800"
             Height="{Binding Height,Mode=TwoWay}">

    <StackPanel Orientation="Vertical" Margin="0,0,0,0">
    
        <StackPanel Orientation="Horizontal" Background="White" Height="80" Width="800">

            <!-- Collection Agreement -->
            <StackPanel Width="150" Orientation="Vertical">
                <!-- Collection Agreement Name -->
                <TextBlock Text="Navn:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,10,0,0"></TextBlock>
            
                <!-- Collection Agreement Name Value -->
                <TextBlock Text="DanskMetal 3.2" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,25"></TextBlock>
            </StackPanel>

            <!-- Spacing -->
            <StackPanel Width="40" />
        
            <!-- Dates -->
            <StackPanel Width="275" Orientation="Vertical">
            
                <!-- Dates Title-->
                <TextBlock Text="Interval for gyldighed:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,0"></TextBlock>
            
                <!-- Dates Values-->
                <StackPanel Orientation="Horizontal">
                
                    <!-- Dates From Value-->
                    <TextBlock Text="01/01/2019" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,25"></TextBlock>

                    <!-- Spacing -->
                    <StackPanel Width="20" />
                
                    <!-- Dates To Value-->
                    <TextBlock Text="01/01/2019"  FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,25"></TextBlock>
                </StackPanel>
            </StackPanel>

            <!-- Spacing -->
            <StackPanel Width="40" />

            <!-- Archive button -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Width="100" Height="50">Arkiver</Button>
            </Grid>

            <!-- Spacing -->
            <StackPanel Width="40" />

            <!-- Archive button -->
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Width="100" Height="50" Click="ToggleRatePanel">Se rater</Button>
            </Grid>
        </StackPanel>
        
        <!--Rate hideable-->
        <StackPanel Name="RatePanel" Orientation="Horizontal" Background="LightGray" Height="80" Width="800" Visibility="Visible">
            <StackPanel Width="80">
                <TextBlock Text="Rate1:" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,10,0,0"></TextBlock>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
